                        <value>DEFAULT</value>
                    </arg>
                    <arg name="tx_vlan_insert" type="bool_with_default">
                        <value>DEFAULT</value>
                    </arg>
                    <arg name="rx_coalesce_usecs">
                        <value>-1</value>
                    </arg>
                    <arg name="rx_max_coalesced_frames">
                        <value>-1</value>
                    </arg>
                </run>

